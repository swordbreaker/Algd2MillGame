<UserControl x:Class="MillGame.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MillGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock FontSize="22" Margin="0,20" FontWeight="Bold">Mühle</TextBlock>
            <Button Margin="0,10" Command="{Binding PlayCommand}">Start</Button>
            <Button Margin="0,10">Server</Button>
            <Button Margin="0,10">Bla</Button>
        </StackPanel>
    </Grid>
</UserControl>
