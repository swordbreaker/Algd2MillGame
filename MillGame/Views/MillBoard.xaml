                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="323"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="300" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>17</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="399"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="69" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>18</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="400"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="222" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>19</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="400"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="379" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>20</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="479"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="-11" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>21</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="479"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="223" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>22</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
