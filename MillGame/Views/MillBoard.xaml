                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="244"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="379" MouseUp="BoardRect_OnMouseUp">
