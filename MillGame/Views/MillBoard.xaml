                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="322"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="223" MouseUp="BoardRect_OnMouseUp">
