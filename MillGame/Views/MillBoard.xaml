                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="245"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="458" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>14</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="323"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="146" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
