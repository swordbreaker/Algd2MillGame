             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MillGame.Views"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="590" d:DesignWidth="800" DataContext="{Binding ViewModel, RelativeSource={RelativeSource Self}}" Background="#FF953C12">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="540"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!--Play Field-->
            <Grid Grid.Column="1" Grid.Row="0">
                <Image Margin="71,0" Source="/MillGame;component/Assets/Img/MillBoard.png" Stretch="Uniform"></Image>
                <Canvas x:Name="BoardCanvas" Margin="71,0">
                    <Rectangle Width="50" Height="50" Canvas.Top="10" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="-11" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>0</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="10" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="222" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>1</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="11" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="458" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>2</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="88" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="69" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>3</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="87" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="223" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>4</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="88" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="379" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>5</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="166" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="146" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>6</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="166" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="223" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>7</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="166" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="300" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>8</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="244" Panel.ZIndex="10" Fill="#00000000" Canvas.Left="-11" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>9</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="244"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="68" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>10</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="244"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="146" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
                            <system:Int32>11</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                    <Rectangle Width="50" Height="50" Canvas.Top="245"  Panel.ZIndex="10" Fill="#00000000" Canvas.Left="300" MouseUp="BoardRect_OnMouseUp">
                        <Rectangle.Tag>
