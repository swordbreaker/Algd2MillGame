                        <Rectangle.Tag>
                            <system:Int32>23</system:Int32>
                        </Rectangle.Tag>
                    </Rectangle>
                </Canvas>
            </Grid>
        <!--Left Field-->
            <StackPanel Grid.Column="0" Grid.Row="0" x:Name="LeftPanel">
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White1" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White2" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White3" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White4" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White5" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White6" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White7" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White8" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="White" x:Name="White9" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
            </StackPanel>
        <!--Right Field-->
            <StackPanel Grid.Column="2" Grid.Row="0" x:Name="RightPanel">
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black1" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black2" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black3" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black4" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black5" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black6" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black7" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black8" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
                <Ellipse Width="50" Height="50" Fill="Black" x:Name="Black9" MouseUp="Stone_MouseUp" Panel.ZIndex="15" Margin="5"/>
            </StackPanel>

            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="18"></TextBlock>
        </Grid>
        <Grid x:Name="BeginGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#7F000000" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="WhiteButton" Command="{Binding WhiteCommand}" Content="Start as White" Margin="10,10"/>
                <Button x:Name="BlackButton" Command="{Binding BlackCommand}" Content="Start as Black" Margin="10,10"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
